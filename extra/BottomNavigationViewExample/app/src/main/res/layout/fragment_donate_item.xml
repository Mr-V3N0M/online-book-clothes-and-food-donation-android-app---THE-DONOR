<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateItemFragment"
    android:layout_marginBottom="56sp"
    android:orientation="vertical">

    <Spinner
        android:layout_width="match_parent"
        android:background="@drawable/item_spinner_bk"
        android:layout_height="50sp"

        android:id="@+id/fragment_donate_spinner_items"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_name"
            android:text="Name"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_light"/>
        <EditText
            android:layout_marginLeft="10sp"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_edt_name"
            android:hint="USER NAME"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_light"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_mobile"
            android:text="Mobile"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_light"/>
        <EditText
            android:layout_marginLeft="10sp"

            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_edt_mobile"
            android:hint="8469514210"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_light"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_email"
            android:text="Email"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_light"/>
        <EditText
            android:layout_marginLeft="10sp"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_edt_email"
            android:hint="mayank17081998@gmail.com"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_light"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_city"
            android:text="City"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_light"/>
        <Spinner
            android:layout_marginLeft="10sp"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_donate_edt_city_spinner"
            android:hint="mayank17081998@gmail.com"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_light"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:id="@+id/fragment_donate_img"
            android:background="@drawable/books"

            ></ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_btn_option_bk"
            android:layout_marginLeft="20sp"
            android:textColor="@android:color/white"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:fontFamily="@font/montserrat_light"
            android:id="@+id/fragment_donate_take_img"
            android:text="Take Picture"
            android:layout_gravity="top|center"
            android:layout_marginTop="50sp"/>


    </LinearLayout>


    <EditText
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:lines="5"
        android:id="@+id/fragment_donate_item_description"
        android:hint="Provide Description for your item"
        android:background="@drawable/home_drawable_border"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_light"
        android:padding="5sp"
        android:textSize="15sp"/>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_donate_submit"
        android:text="SUBMIT"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_light"
        android:background="@drawable/add_btn_option_bk"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="40sp"/>








</LinearLayout>